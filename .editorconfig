# Convenciones generales
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Archivos específicos
[*.{php,html,css,js}]
indent_size = 2
[*.{js}]
insert_final_newline = false

# Ajustes para Markdown
[*.md]
trim_trailing_whitespace = false

# Notese que estas convenciones son específicas para el proyecto y no necesariamente siguen los estandares.
